@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Room</h1>



<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Service Title</th>
        <th>Description</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.RoomId</th>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/AdminRoom/DeleteRoom/@item.RoomId" class="btn btn-danger">Delete</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomId" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>
<a href="/AdminRoom/AddRoom/" class="btn btn-info">New</a>