@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    var count = 0;
}

<h1>Guest</h1>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Surname</th>
        <th>City</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@(count++)</th>
            <th>@item.Name</th>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td><a href="/AdminGuest/DeleteGuest/@item.GuestId" class="btn btn-danger">Delete</a></td>
            <td><a href="/AdminGuest/UpdateGuest/@item.GuestId" class="btn btn-success">Update</a></td>
        </tr>
    }
</table>
<a href="/AdminGuest/AddGuest/" class="btn btn-info">New</a>