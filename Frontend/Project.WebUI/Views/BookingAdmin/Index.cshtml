@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Reservations</h1>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Check in date</th>
                <th>Check out date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var count = 0;
                <tr>
                    <th>@count++</th>
                    <td>@item.Name</td>

                    <td>@item.Checkin</td>
                    <td>@item.Checkout</td>
                    <td>
                        <span class="badge badge-primary px-2">@item.Status</span>
                    </td>
                    <td>
                        <a href="#" class="btn btn-outline-primary">Accept</a>
                        <a href="#" class="btn btn-outline-danger">Reject</a>
                        <a href="#" class="btn btn-outline-warning">Wait</a>
                        <a href="#" class="btn btn-outline-info">Update</a>
                        <a href="#" class="btn btn-outline-dark">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>