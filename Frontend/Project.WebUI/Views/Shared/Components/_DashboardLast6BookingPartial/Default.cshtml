@model List<ResultLast6BookingDto>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Customer</th>
                                    <th>Mail</th>
                                    <th>Status</th>
                                    <th>Adult Count</th>
                                    <th>Child Count</th>
                                    <th>Room Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Mail</td>

                                        @if (item.Status == "Approved")
                                        {
                                            <td>
                                                <div class="progress" style="height: 6px">
                                                    <div class="progress-bar bg-success" style="width:100%"></div>

                                                </div>
                                                <i class="fa fa-circle-o text-success  mr-2"></i> Approved
                                            </td>

                                        }
                                        else if (item.Status == "Waiting")
                                        {
                                            <td>
                                                <div class="progress" style="height: 6px">
                                                    <div class="progress-bar bg-warning" style="width: 100%"></div>

                                                </div>
                                                <i class="fa fa-circle-o text-warning  mr-2"></i> Waiting
                                            </td>
                                        }
                                        else 
                                        {
                                            <td>
                                                <div class="progress" style="height: 6px">
                                                    <div class="progress-bar bg-danger" style="width: 100%"></div>

                                                </div>
                                                <i class="fa fa-circle-o text-danger  mr-2"></i> Rejected
                                            </td>
                                        }

                                        <td>
                                            @item.AdultCount
                                        </td>
                                        <td>
                                            @item.ChildCount
                                        </td>
                                        <td>
                                            @item.RoomCount
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>