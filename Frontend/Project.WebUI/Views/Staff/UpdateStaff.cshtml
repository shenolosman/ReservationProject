@model UpdateStaffViewModel
@{
    ViewData["Title"] = "Update Staff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Update Staff</h1>


<form method="post">
    <input type="hidden" asp-for="StaffId" />

    <label>Staff name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />

    <label>Staff Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />

    <label>Soical media 1</label>
    <input type="text" asp-for="SocialMedia1" class="form-control" />
    <br />

    <label>Soical media 2</label>
    <input type="text" asp-for="SocialMedia2" class="form-control" />
    <br />

    <label>Soical media 3</label>
    <input type="text" asp-for="SocialMedia3" class="form-control" />
    <br />

    <button class="btn btn-outline-success">Update</button>
</form>

