@model CreateStaffDto
@{
    ViewData["Title"] = "Add Staff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Add Staff</h1>


<form method="post">
    <label>Staff name</label>
    <input type="text" asp-for="Name" class="form-control"/>
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />

    <label>Staff Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />

    <label>Soical media 1</label>
    <input type="text" asp-for="SocialMedia1" class="form-control" />

    <br />

    <label>Soical media 2</label>
    <input type="text" asp-for="SocialMedia2" class="form-control" />
    <br />

    <label>Soical media 3</label>
    <input type="text" asp-for="SocialMedia3" class="form-control" />
    <br />

    <button class="btn btn-primary">Add</button>
</form>
