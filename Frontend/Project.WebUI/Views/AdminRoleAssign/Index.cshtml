@model List<Project.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Role Assign</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt=""></td>
                <td>@item.Name @item.Surname</td>
                <td>
                    <a href="/AdminRoleAssign/AssignRole/@item.Id" class="btn btn-warning">Assign</a>
                </td>
            </tr>
        }
    </tbody>
</table>

