@model GetMessageContactByIdDto
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<div class="email-left-box">
    <a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Compose</a>
    @await Html.PartialAsync("SideBarAdminContactPartial")
    <h5 class="mt-5 m-b-10">Categories</h5>
    @await Html.PartialAsync("SideBarCategoryAdminContactPartial")
</div>
<div class="email-right-box">
    <div class="toolbar">
        <span class="btn btn-dark caret m-l-5">Detail</span>
    </div>
    <div class="email-list m-t-15">
        <div class="read-content">
            <div class="media pt-5">
                <img class="mr-3 rounded-circle" src="~/adminweb/images/avatar/1.jpg">
                <div class="media-body">
                    <h5 class="m-b-3">Sender: @Model.Name</h5>
                    <p class="m-b-2">@Model.Date</p>
                </div>

            </div>
            <hr>
            <h5 class="m-b-15">@Model.Subject</h5>
            <p>
                @Model.Message
            </p>
        </div>
    </div>
</div>


