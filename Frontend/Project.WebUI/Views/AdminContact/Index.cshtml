@model List<ResultInboxContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="email-left-box">
    <a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Compose</a>
    @await Html.PartialAsync("SideBarAdminContactPartial")
    <h5 class="mt-5 m-b-10">Categories</h5>
    @await Html.PartialAsync("SideBarCategoryAdminContactPartial")
</div>
<div class="email-right-box">
    <div class="toolbar">
        <span class="btn btn-dark caret m-l-5">Messages</span>
    </div>
    <div class="email-list m-t-15">
        @foreach (var item in Model)
        {
            var contentLength = "";
            if (item.Message.Length >= 30) contentLength = item.Message.Substring(0, 30) + "...";
            else contentLength = item.Message;

            <div class="message">
                <a href="/AdminContact/MessageDetailsReceiver/@item.ContactId">
                    <div class="col-mail col-mail-1">
                        <div class="email-checkbox">
                            <input type="checkbox" id="chk21">
                            <label class="toggle" for="chk21"></label>
                        </div><span class="star-toggle ti-star"></span>
                    </div>
                    <div class="col-mail col-mail-2">
                        <div class="subject"><b>Subject: @item.Subject & Topic: </b> @contentLength</div>
                        <div class="date">@(((DateTime)item.Date).ToString("dd-MM-YYYY"))</div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>